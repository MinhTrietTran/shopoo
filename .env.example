# Shopoo Environment Configuration Template
# Copy this file to .env and update the values

# Application
NODE_ENV=development
PORT=3000

# Database Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your-secure-mongodb-password-here
MONGODB_URI=mongodb://admin:your-secure-mongodb-password-here@mongodb:27017/shopoo?authSource=admin

# Redis Configuration  
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:your-secure-redis-password-here@redis:6379

# Neo4j Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-neo4j-password-here

# Security
SESSION_SECRET=your-super-secret-session-key-change-in-production
JWT_SECRET=your-jwt-secret-key-minimum-32-characters-long

# Upload Configuration
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# External APIs (Optional)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Development only
DEBUG=shopoo:*
