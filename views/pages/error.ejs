<%- include('../partials/header') %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="mb-4">
                <i class="fas fa-exclamation-circle fa-5x text-danger"></i>
            </div>
            <h1 class="display-4 fw-bold mb-3"><%= typeof statusCode !== 'undefined' ? statusCode : '500' %></h1>
            <h2 class="h4 mb-4">Đã xảy ra lỗi</h2>
            <p class="text-muted mb-4">
                <%= typeof error !== 'undefined' ? error : 'Đã xảy ra lỗi không mong muốn. Vui lòng thử lại sau.' %>
            </p>
            <div class="d-flex justify-content-center gap-3">
                <a href="/" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>Về trang chủ
                </a>
                <button onclick="location.reload()" class="btn btn-outline-secondary">
                    <i class="fas fa-refresh me-2"></i>Thử lại
                </button>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer-scripts') %>
