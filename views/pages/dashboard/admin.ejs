<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-shield-check"></i> Shopoo - Admin Panel
            </a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">
                    Xin chào, Admin
                    <span class="badge bg-light text-dark ms-1">Quản trị viên</span>
                </span>
                <a href="/auth/logout" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-box-arrow-right"></i> Đăng xuất
                </a>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2">
                <div class="card">
                    <div class="card-header">
                        <h6><i class="bi bi-list me-2"></i>Menu</h6>
                    </div>
                    <div class="list-group list-group-flush">
                        <a href="#" class="list-group-item list-group-item-action active">
                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="bi bi-people me-2"></i>Người dùng
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="bi bi-shop me-2"></i>Cửa hàng
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="bi bi-box me-2"></i>Sản phẩm
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="bi bi-cart-check me-2"></i>Đơn hàng
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="bi bi-bar-chart me-2"></i>Báo cáo
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="bi bi-gear me-2"></i>Cài đặt
                        </a>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-10">
                <div class="row">
                    <div class="col-12">
                        <h2>Admin Dashboard</h2>
                        <p class="text-muted">Quản lý tổng thể hệ thống Shopoo</p>
                    </div>
                </div>

                <!-- Overview Stats -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-white bg-primary">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>0</h4>
                                        <p class="mb-0">Tổng người dùng</p>
                                    </div>
                                    <i class="bi bi-people fs-1"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-success">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>0</h4>
                                        <p class="mb-0">Cửa hàng</p>
                                    </div>
                                    <i class="bi bi-shop fs-1"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-warning">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>0</h4>
                                        <p class="mb-0">Sản phẩm</p>
                                    </div>
                                    <i class="bi bi-box fs-1"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-info">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>0</h4>
                                        <p class="mb-0">Đơn hàng</p>
                                    </div>
                                    <i class="bi bi-cart-check fs-1"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Charts and Tables Row -->
                <div class="row mb-4">
                    <!-- User Stats -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="bi bi-people me-2"></i>Thống kê người dùng</h5>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <h4 class="text-primary">0</h4>
                                        <p class="small text-muted">Khách hàng</p>
                                    </div>
                                    <div class="col-4">
                                        <h4 class="text-success">0</h4>
                                        <p class="small text-muted">Cửa hàng</p>
                                    </div>
                                    <div class="col-4">
                                        <h4 class="text-warning">0</h4>
                                        <p class="small text-muted">Admin</p>
                                    </div>
                                </div>
                                <hr>
                                <h6>Phân bố hạng khách hàng:</h6>
                                <div class="row text-center">
                                    <div class="col-3">
                                        <small class="text-muted">Bạc</small>
                                        <div class="fw-bold">0</div>
                                    </div>
                                    <div class="col-3">
                                        <small class="text-muted">Vàng</small>
                                        <div class="fw-bold">0</div>
                                    </div>
                                    <div class="col-3">
                                        <small class="text-muted">Kim cương</small>
                                        <div class="fw-bold">0</div>
                                    </div>
                                    <div class="col-3">
                                        <small class="text-muted">Thường</small>
                                        <div class="fw-bold">0</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Shop Stats -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="bi bi-shop me-2"></i>Thống kê cửa hàng</h5>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-6">
                                        <h4 class="text-success">0</h4>
                                        <p class="small text-muted">Đã xác thực</p>
                                    </div>
                                    <div class="col-6">
                                        <h4 class="text-warning">0</h4>
                                        <p class="small text-muted">Chờ xác thực</p>
                                    </div>
                                </div>
                                <hr>
                                <h6>Hoạt động:</h6>
                                <div class="row text-center">
                                    <div class="col-6">
                                        <small class="text-muted">Hoạt động</small>
                                        <div class="fw-bold text-success">0</div>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">Tạm ngưng</small>
                                        <div class="fw-bold text-danger">0</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Activities -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="bi bi-clock me-2"></i>Hoạt động gần đây</h5>
                            </div>
                            <div class="card-body">
                                <div class="list-group list-group-flush">
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="bi bi-person-plus text-success me-2"></i>
                                            <small>Không có hoạt động nào</small>
                                        </div>
                                        <small class="text-muted">--</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="bi bi-exclamation-triangle me-2"></i>Cần xử lý</h5>
                            </div>
                            <div class="card-body">
                                <div class="list-group list-group-flush">
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="bi bi-shop text-warning me-2"></i>
                                            <small>Cửa hàng chờ xác thực</small>
                                        </div>
                                        <span class="badge bg-warning rounded-pill">0</span>
                                    </div>
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="bi bi-flag text-danger me-2"></i>
                                            <small>Báo cáo vi phạm</small>
                                        </div>
                                        <span class="badge bg-danger rounded-pill">0</span>
                                    </div>
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="bi bi-question-circle text-info me-2"></i>
                                            <small>Hỗ trợ khách hàng</small>
                                        </div>
                                        <span class="badge bg-info rounded-pill">0</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5><i class="bi bi-lightning me-2"></i>Thao tác nhanh</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-2 mb-3">
                                        <button class="btn btn-primary w-100">
                                            <i class="bi bi-person-plus me-1"></i>
                                            <br><small>Thêm người dùng</small>
                                        </button>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <button class="btn btn-success w-100">
                                            <i class="bi bi-check-circle me-1"></i>
                                            <br><small>Xác thực cửa hàng</small>
                                        </button>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <button class="btn btn-warning w-100">
                                            <i class="bi bi-bar-chart me-1"></i>
                                            <br><small>Xem báo cáo</small>
                                        </button>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <button class="btn btn-info w-100">
                                            <i class="bi bi-gear me-1"></i>
                                            <br><small>Cài đặt</small>
                                        </button>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <button class="btn btn-secondary w-100">
                                            <i class="bi bi-database me-1"></i>
                                            <br><small>Sao lưu</small>
                                        </button>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <button class="btn btn-dark w-100">
                                            <i class="bi bi-shield-check me-1"></i>
                                            <br><small>Bảo mật</small>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>